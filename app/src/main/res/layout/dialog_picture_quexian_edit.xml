<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_record_head"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_alignParentLeft="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_distance_e"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/capture_quexian_distance_edt"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginLeft="150dp"
            android:background="@drawable/bg_dialog_editext" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_alignParentLeft="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_style_e"
            android:textColor="@color/colorText" />

        <com.bmw.peek2.view.view.MySpinner
            android:id="@+id/capture_quexian_style_sp"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@drawable/bg_dialog_editext"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/capture_quexian_name_tv"
            android:layout_alignParentLeft="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_name_e"
            android:textColor="@color/colorText" />

        <com.bmw.peek2.view.view.MySpinner
            android:id="@+id/capture_quexian_name_sp"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@drawable/bg_dialog_editext" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/capture_quexian_clock_tv"
            android:layout_alignParentLeft="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorText"
            android:text="@string/capture_quexian_clock_e" />

        <EditText
            android:id="@+id/capture_quexian_clock_edt"
            android:inputType="number"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_toLeftOf="@+id/tv_quexianEdit_clockShow"
            android:background="@drawable/bg_dialog_editext"  />
        <TextView
            android:id="@+id/tv_quexianEdit_clockShow"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/record_dialog_edit"
            android:textColor="@color/colorText"
            android:clickable="true"
            android:background="@drawable/img_btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/example"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/capture_quexian_grade_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_grade_e"
            android:textColor="@color/colorText" />

        <com.bmw.peek2.view.view.MySpinner
            android:id="@+id/capture_quexian_grade_sp"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@drawable/bg_dialog_editext" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/capture_quexian_length_tv"
            android:layout_alignParentLeft="true"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_length_e"
            android:textColor="@color/colorText" />

        <EditText
            android:layout_marginLeft="150dp"
            android:id="@+id/capture_quexian_length_edt"
            style="@style/dialog_quexian_edit"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_editext" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/capture_quexian_detail_tv"
            style="@style/dialog_quexian_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/capture_quexian_detail_e"
            android:textColor="@color/colorText" />

        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/capture_quexian_detail_edt"
            style="@style/dialog_quexian_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="top"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:maxLines="4"
            android:background="@drawable/bg_dialog_editext" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quexian_cancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/bg_record_btn"
            style="@style/dialog_btn_text"
            android:padding="6dp"
            android:text="@string/cancel"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/quexian_sure"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/bg_record_btn"
            style="@style/dialog_btn_text"
            android:padding="6dp"
            android:text="@string/sure"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"/>
    </LinearLayout>


</LinearLayout>