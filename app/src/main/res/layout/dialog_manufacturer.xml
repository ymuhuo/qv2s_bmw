<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:padding="5dp"
        android:text="@string/manufacturer_title"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dialog_normal_title_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_manufacturer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:src="@mipmap/add_pic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="生产商logo"
            android:textColor="@color/colorText"
            android:textSize="13sp" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColorHint="@color/colorBase_dark">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="@string/please_enter_manufacturer_name"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="55"
            android:padding="8dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dialog_normal_message_textsize" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColorHint="@color/colorBase_dark">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="@string/please_enter_deviceName"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="55"
            android:padding="8dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/dialog_normal_message_textsize" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/normal_dialog_cancel"
            style="@style/dialog_btn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_record_btn"
            android:clickable="true"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/normal_dialog_sure"
            style="@style/dialog_btn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_record_btn"
            android:clickable="true"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/next_step" />
    </LinearLayout>


</LinearLayout>