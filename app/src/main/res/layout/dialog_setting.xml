<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        style="@style/seekBar_text"
        android:text="视频信息配置"
        android:padding="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/half_spacerlayer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="地址:"/>
            <EditText
                android:id="@+id/haikang_ip"
                android:maxWidth="100dp"
                android:inputType="number"
                android:digits="0123456789."
                style="@style/Setting_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="端口:"/>
            <EditText
                android:id="@+id/haikang_port"
                android:maxWidth="100dp"
                style="@style/Setting_edt"
                android:inputType="number"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/half_spacerlayer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="用户名:"/>
            <EditText
                android:id="@+id/haikang_account"
                android:maxWidth="100dp"
                style="@style/Setting_edt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="密码:"/>
            <EditText
                android:id="@+id/haikang_password"
                android:maxWidth="100dp"
                android:inputType="text"
                style="@style/Setting_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="子码流:"/>
            <com.bmw.peek2.view.view.SwitchButton
                android:id="@+id/haikang_zimaliu"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                app:kswBackColor="#ccc"
                app:kswTintColor="@color/colorText"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="visible"
        style="@style/seekBar_text"
        android:text="控制信息配置"
        android:padding="3dp"/>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/half_spacerlayer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="地址:"/>
            <EditText
                android:id="@+id/socket_ip"
                android:maxWidth="100dp"
                style="@style/Setting_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="端口:"/>
            <EditText
                android:id="@+id/socket_port"
                style="@style/Setting_edt"
                android:maxWidth="100dp"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        style="@style/seekBar_text"
        android:text="wifi信息配置"
        android:padding="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/half_spacerlayer">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="名称:"/>
            <EditText
                android:id="@+id/wifi_ssid"
                style="@style/Setting_edt"
                android:inputType="number"
                android:digits="0123456789."
                android:maxWidth="80dp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="密码:"/>
            <EditText
                android:id="@+id/wifi_password"
                android:maxWidth="80dp"
                style="@style/Setting_edt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="wifi自动连接:"/>
            <com.bmw.peek2.view.view.SwitchButton
                android:id="@+id/wifi_isConnect_auto"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                app:kswBackColor="#ccc"
                app:kswTintColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/seekBar_text"
                android:text="调试:"/>
            <com.bmw.peek2.view.view.SwitchButton
                android:id="@+id/permission2just"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                app:kswBackColor="#ccc"
                app:kswTintColor="@color/colorText"/>
        </LinearLayout>

    </LinearLayout>


    <View
        style="@style/myHorizontalLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/set_sure"
            style="@style/Setting_sureTxt"
            android:text="确定"/>
        <View
            style="@style/myVerticalLine"/>
        <TextView
            android:id="@+id/set_reset"
            style="@style/Setting_sureTxt"
            android:text="默认值"/>
        <View
            style="@style/myVerticalLine"/>
        <TextView
            android:id="@+id/set_cancel"
            style="@style/Setting_sureTxt"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>